<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/transparent"
    android:padding="1dp">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="2dp">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">
            
            <ImageView 
                android:id="@+id/client_phone_indicator"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_launcher"/>
            
            <ImageView 
                android:id="@+id/client_miting_indicator"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_launcher"/>
            
            <ImageView 
                android:id="@+id/client_birthday_indicator"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_launcher"/>
            
        </LinearLayout>
        
        <TextView 
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="2dp"
            android:text="Trololo Trolololololololololo Trololoololo"
            android:layout_toLeftOf="@+id/client_status_img"
            android:layout_marginRight="5dp"/>
        
        <ImageView 
            android:id="@+id/client_status_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        
        <TextView 
            android:id="@+id/client_relation_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Холодный"
            android:layout_below="@+id/client_status_img"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_marginTop="2dp"/>
        
        
    </RelativeLayout>
    
    <ImageView 
        android:id="@+id/client_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/bg_item_image"/>

</FrameLayout>
